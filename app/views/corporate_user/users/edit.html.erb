<h1 class="mt-4 mb-5"><%= @user.nickname %> さんの編集</h1>

<%= form_with(model: @user, url: corporate_user_user_path(@user), method: :patch, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :nickname, 'ニックネーム' %>
    <%= f.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :memo, 'メモ' %>
    <%= f.text_area :memo, rows: 5, class: 'form-control' %>
  </div>

  <div class="d-flex">
    <%= f.submit '保存する', class: 'btn btn-success me-2' %>
    <%= link_to '戻る', corporate_user_user_path(@user), class: 'btn btn-secondary' %>
  </div>
<% end %>