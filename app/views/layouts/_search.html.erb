<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "キーワードを入力" %>
      <%= f.select :range, options_for_select([['Question'], ['QuestionAnswer']]) %>
      <%= f.submit "検索", class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
<% end %>