<h1 class="mt-4 mb-5">質問一覧</h1>

<% @questions.each do |question| %>
  <div class="question-item border-bottom mb-3 pb-2">
    <!-- 質問タイトルをリンクに -->
    <h3>
      <%= link_to question.title, question_path(question) %>
    </h3>
    <!-- 質問内容を表示 -->
    <p>
      <%= truncate(question.body, length: 100) %>
    </p>
  </div>
<% end %>