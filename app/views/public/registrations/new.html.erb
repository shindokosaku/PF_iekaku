
<div class="container">
  <div class="row">
    <h3 class = "col-3 mt-3 mb-5 text-center" style="background-color: #E6E6E6;">新規会員登録</h3>
  </div>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="row mb-2">
        <div class="col-3"><%= f.label :nickname ,"ニックネーム" %></div>
        <div class="col-3">
          <%= f.text_field :nickname, autocomplete: "nickname", placeholder: "nickname" %>
          <% if @user.errors[:nickname].any? %>
            <div class="text-danger">
              <%= @user.errors[:nickname].first %>
            </div>
          <% end %>
        </div>
      </div>  
        
      <div class="row mb-2">
        <div class="col-3"><%= f.label :email ,"メールアドレス" %></div>
        <div class="col-3"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></div>  
      </div>

      <div class="row mb-2">
        <div class="col-3"><%= f.label :password, "パスワード(6文字以上)" %></div>
        <div class="col-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>

      <div class="row mb-2">
        <div class="col-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
        <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>

      <div class="row actions text-center my-3">
        <div class="col-7"><%= f.submit "      新規登録      ", class: "btn btn-success"%></div>
      </div>
    <% end %>


    <div class="row mt-5 ml-5">
      <h3 class = "col-3 text-center" style="background-color: #E6E6E6;"">既に登録済みの方</h3>
    </div>

    <div class="row ml-5">
      <div class="col ml-5 pl-5"><%= link_to "こちら", new_user_session_path %>からログインしてください</div>
    </div>

</div>