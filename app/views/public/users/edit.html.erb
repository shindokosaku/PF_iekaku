<div class="container mt-5">
  <h2 class="mb-4">プロフィール編集</h2>

  <%= form_with model: @user, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :nickname, 'ニックネーム', class: 'form-label' %>
      <%= form.text_field :nickname, class: 'form-control', required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :email, 'メールアドレス', class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control', required: true %>
    </div>
    <div class="row mt-5">
      <div class="col-2"> 
        <%= form.submit '更新する', class: 'btn btn-outline-success' %>
      </div>
      <div class="col-2">
        <%= link_to "退会する", users_unsubscribe_users_path(@user), class: "btn btn-outline-danger" %>
      </div>
    </div>
  <% end %>
</div>